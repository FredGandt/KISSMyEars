{
	"manifest_version": 2,
	"name": "KISS My Ears",
	"homepage_url": "https://github.com/FredGandt/KISSMyEars",
	"description": "Keep It Stupid Simple local audio file player",
	"version": "0.5.0",
	"offline_enabled": true,
	"permissions": [
		"file:///*",
		"storage"
	],
	"browser_action": {
		"default_title": "KISS My Ears",
		"default_icon": {
			"16": "icon16.png",
			"24": "icon24.png",
			"32": "icon32.png"
		}
	},
	"icons": {
		"16": "icon16.png",
		"24": "icon24.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"background": {
		"scripts": [ "background.js" ],
		"persistent": false
	}
}
